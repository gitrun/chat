doctype html
html(lang="en")
  head
    meta(charset="utf-8")
    title GitChat
    meta(name="description", content="GitChat build on top of GitHub API")
    meta(name="keywords", content="gitchat, chat, github, api, socket.io")
    meta(name="author", content="Hashobject (team@hashobject.com)")
    link(rel="stylesheet", href="/index.css")
    script.
      var gChat = {};
      gChat.user = {
        id: '#{user.id}',
        username: '#{user.username}',
        avatar: '#{user.avatar}',
        profileUrl: '#{user.profileUrl}',
        displayName: '#{user.displayName}',
        accessToken: '#{user.accessToken}'
      };
    script(src="/socket.io/socket.io.js")
  body
    include intro
    include chat
    div#popup-cover
  script(src="https://cdnjs.cloudflare.com/ajax/libs/underscore.js/1.7.0/underscore-min.js")
  script(src="https://cdnjs.cloudflare.com/ajax/libs/moment.js/2.8.4/moment.min.js")
  script(src="https://code.jquery.com/jquery-1.11.2.min.js")
  script(src="/js/page.js")
  script(src="https://cdnjs.cloudflare.com/ajax/libs/spin.js/2.0.1/spin.min.js")
  script(src="https://cdnjs.cloudflare.com/ajax/libs/showdown/0.3.1/showdown.min.js")
  script(src="/js/app.js")